<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Baustellen.App.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Baustellen.App.Client.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Projekte"
            Icon="{StaticResource ProjectIconImageSource}"
            ContentTemplate="{DataTemplate views:MainPage}" />

        <ShellContent
            Title="UserProfile"
            Icon="{StaticResource ProfileIconImageSource}"
            ContentTemplate="{DataTemplate views:UserProfilePage}" />
    </TabBar>
</Shell>
