<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Baustellen.App.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Baustellen.App.Client.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="{StaticResource Primary}"
    Shell.TabBarBackgroundColor="{StaticResource Secondary}"
    Shell.TitleColor="{StaticResource Gray100}">

    <TabBar>
        <ShellContent
            Title="Projekte"
            Icon="{StaticResource ProjectIconImageSource}"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage"/>

        <ShellContent
            Title="UserProfile"
            Icon="{StaticResource ProfileIconImageSource}"
            ContentTemplate="{DataTemplate views:UserProfilePage}"
            Route="UserProfilePage"/>
    </TabBar>
</Shell>
